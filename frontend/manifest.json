{
  "manifest_version": 3,
  "name": "DeepGuard-AI",
  "version": "1.0",
  "description": "Real-time Deepfake and Social Engineering detection for video calls.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "interceptor.js",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "file:///*"
      ],
      "js": [
        "content_loader.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "DeepGuard Security Status"
  }
}